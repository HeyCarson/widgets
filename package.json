{
  "name": "@heycarson/widgets",
  "type": "module",
  "version": "0.0.45",
  "description": "Theme/App Widgets",
  "author": "David Lavieri <david@heycarson.com>",
  "license": "MIT",
  "developer": "dist/developer.js",
  "devcss": "dist/developer.css",
  "theme": "dist/theme.js",
  "themecss": "dist/theme.css",
  "app": "dist/app.js",
  "appcss": "dist/app.css",
  "base": "dist/base.js",
  "basecss": "dist/base.css",
  "main": "dist/main.js",
  "css": "dist/main.css",
  "source": "src/index.js",
  "targets": {
    "main": {
      "source": "src/index.js",
      "optimize": true
    },
    "css": {
      "source": "src/index.scss"
    },
    "base": {
      "source": "src/base/index.js",
      "context": "browser",
      "outputFormat": "esmodule",
      "optimize": true,
      "isLibrary": true
    },
    "basecss": {
      "source": "src/base/index.scss"
    },
    "developer": {
      "source": "src/developer/index.js",
      "context": "browser",
      "outputFormat": "esmodule",
      "optimize": true,
      "isLibrary": true
    },
    "devcss": {
      "source": "src/developer/index.scss"
    },
    "theme": {
      "source": "src/theme/index.js",
      "context": "browser",
      "outputFormat": "esmodule",
      "optimize": true,
      "isLibrary": true
    },
    "themecss": {
      "source": "src/theme/index.scss"
    },
    "app": {
      "source": "src/app/index.js",
      "context": "browser",
      "outputFormat": "esmodule",
      "optimize": true,
      "isLibrary": true
    },
    "appcss": {
      "source": "src/app/index.scss"
    }
  },
  "scripts": {
    "clean": "rm -rf dist",
    "watch": "parcel watch",
    "build": "npm run clean && parcel build --no-source-maps"
  },
  "devDependencies": {
    "@parcel/transformer-sass": "2.9.3",
    "parcel": "^2.9.3"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:HeyCarson/widgets.git"
  },
  "bugs": {
    "url": "https://github.com/HeyCarson/widgets/issues"
  },
  "homepage": "https://github.com/HeyCarson/widgets"
}
